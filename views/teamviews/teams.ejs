<%- include("_header") -%>

<h1>List of Teams (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Team Name</th>
        <th>Win</th>
        <th>Loses</th>
        <th>Win %</th>
        <th>Ham Effic</th>
        <th>Stl Def</th>
        <th>Net Effic</th>
        <th>Pts For</th>
        <th>Pts Against</th>
        <th>Net Score</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/teams/create">AddTeam</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const team of model) { %>
        <tr>
          <td><%= team.teamID %></td>
          <td><%= team.win %></td>
          <td><%= team.lose %></td>
          <td><%= team.winPer %></td>
          <td><%= team.hamEff %></td>
          <td><%= team.stlDef %></td> 
          <td><%= team.netEff %></td>
          <td><%= team.ptsFor %></td>
          <td><%= team.ptsAgainst %></td>
          <td><%= team.netScore %></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/teams/edit/<%= team.id %>">Edit</a>
            <a class="btn btn-sm btn-danger" href="/teams/delete/<%= team.id %>">Delete</a>
          </td>
         
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("_footer") -%>
